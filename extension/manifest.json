{
    "manifest_version": 3,
    "name": "TEXA AI",
    "version": "1.3.2",
    "description": "Akses berbagai AI tools premium dengan satu langganan.",
    "icons": {
        "16": "icon/icon16.png",
        "48": "icon/icon48.png",
        "128": "icon/icon128.png"
    },
    "permissions": [
        "storage",
        "tabs",
        "alarms",
        "scripting",
        "cookies"
    ],
    "host_permissions": [
        "http://localhost:3000/*",
        "http://127.0.0.1:3000/*",
        "http://127.0.0.1:8787/*",
        "https://labs.google/*",
        "https://firestore.googleapis.com/*",
        "https://*.texa.studio/*",
        "https://texa.studioa.vercel.app/*",
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "http://localhost:3000/*",
                "http://127.0.0.1:3000/*",
                "https://*.texa.studio/*",
                "https://texa.studioa.vercel.app/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "injected.js"
            ],
            "matches": [
                "http://localhost:3000/*",
                "http://127.0.0.1:3000/*",
                "https://*.texa.studio/*",
                "https://texa.studioa.vercel.app/*"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "TEXA AI",
        "default_icon": {
            "16": "icon/icon16.png",
            "48": "icon/icon48.png",
            "128": "icon/icon128.png"
        }
    }
}